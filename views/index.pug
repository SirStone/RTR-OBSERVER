doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='manifest' href='manifest.json')
    title #{title}
    link(rel="stylesheet" href="css/index.css")
    script(src='js/serviceWorkerRegister.js')
    script(src='https://code.jquery.com/jquery-3.7.1.slim.min.js' integrity='sha256-kmHvs0B+OpCW5GVHUNjv9rOmY0IvSIRcf7zGUDTDQM8=' crossorigin='anonymous')
  body.has-background-dark
    div(id="status_container")
      div.field.is-grouped.is-grouped-multiline.p-1
        div.control
          div.tags.has-addons
            span.tag.is-white Version
            span.tag.is-info.status #{version}
        div.control(id="connection_status")
          div.tags.has-addons
            span.tag.is-white Connection status
            span.tag.is-info.status
              span.icon
                i.fa.fa-times
        div.control(id="game_status")
          div.tags.has-addons
            span.tag.is-white Game status
            span.tag.is-info.status
              span.icon
                i.fa.fa-question
        div.control(id="screen_lock")
          div.tags.has-addons
            span.tag.is-white Screen lock
            span.tag.is-info.status
              span.icon
                i.fa.fa-question
      div.field.is-grouped.is-grouped-multiline.p-1(id="connection_parameters")
        div.control(id="observer_name") 
          div.tags.has-addons
            span.tag.is-white.is-medium Name
            span.tag.is-warning.is-medium
              input.input.is-small(type='text' placeholder='Observer')
        div.control(id="ip_dns")
          div.tags.has-addons
            span.tag.is-white.is-medium IP/DNS
            span.tag.is-warning.is-medium
              input.input.is-small(type='text' placeholder='localhost')
        div.control(id="port")
          div.tags.has-addons
            span.tag.is-white.is-medium Port
            span.tag.is-warning.is-medium
              input.input.is-small(type='text' placeholder='7654')
        div.control(id="secret")
          div.tags.has-addons
            span.tag.is-white.is-medium Secret
            span.tag.is-warning.is-medium
              input.input.is-small(type='text' placeholder='connection secret')
        button.button.is-warning(id="connect_button") Connect


  div.is-hidden(id='version' version=version)
  div.has-background-info(id='arena_container') No battlefield available
    canvas.gamecanvas(id='background')
    canvas.gamecanvas(id='battlefield')



